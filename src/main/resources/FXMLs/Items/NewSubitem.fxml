<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="338.0" prefWidth="623.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.merchlogistics.Controllers.NewSubitemController">
   <children>
      <Separator prefWidth="200.0" />
      <FlowPane alignment="CENTER" prefHeight="112.0" prefWidth="628.0">
         <children>
            <ImageView fx:id="imageView" fitHeight="84.0" fitWidth="95.0" pickOnBounds="true" preserveRatio="true" />
            <TextField fx:id="imagePathTextField" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="344.0" promptText="Đường dẫn ảnh...">
               <FlowPane.margin>
                  <Insets left="20.0" />
               </FlowPane.margin>
            </TextField>
            <Button fx:id="browseButton" mnemonicParsing="false" onAction="#browse" text="Duyệt...">
               <FlowPane.margin>
                  <Insets left="20.0" />
               </FlowPane.margin>
            </Button>
         </children>
      </FlowPane>
      <TextField fx:id="nameTextField" promptText="Tên..." />
      <TextField fx:id="priceTextField" layoutX="10.0" layoutY="34.0" promptText="Giá thành...">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="quantityTextField" layoutX="10.0" layoutY="34.0" promptText="Số lượng...">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </TextField>
      <FlowPane alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirm" text="Đồng ý">
               <FlowPane.margin>
                  <Insets top="10.0" />
               </FlowPane.margin>
            </Button>
         </children>
      </FlowPane>
   </children>
   <padding>
      <Insets left="40.0" right="40.0" />
   </padding>
</VBox>
